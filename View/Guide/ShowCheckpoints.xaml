<Window x:Class="BookingApp.View.Guide.ShowCheckpoints"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.View.Guide"
        mc:Ignorable="d"
        Title="Checkpoints" Height="450" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <ListView x:Name="CheckpointsListView" Margin="10" HorizontalAlignment="Center" Width="380">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Checkpoint Names" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
