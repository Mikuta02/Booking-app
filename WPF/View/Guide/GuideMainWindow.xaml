<Window x:Class="BookingApp.WPF.View.Guide.GuideMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Guide Overview" Height="600" Width="1080">
    
    <Window.Resources>
        <Style x:Key="TransparentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid Grid.Column="0" Background="#F0F0F0" Width="200" HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Tony Parker (user)" Height="60" FontSize="16" Padding="10" FontWeight="Bold" Background="#E0E0E0" HorizontalContentAlignment="Center"/>

            <Grid Grid.Row="1" VerticalAlignment="Center">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button Content="Home (F1)" Style="{StaticResource TransparentButtonStyle}"/>
                    <Button Content="Create tour (F2)" Style="{StaticResource TransparentButtonStyle}" Click="CreateTourPage"/>
                    <Button Content="All tours (F3)" Style="{StaticResource TransparentButtonStyle}" Click="AllToursPage"/>
                    <Button Content="Today tours (F4)" Style="{StaticResource TransparentButtonStyle}" Click="TodayToursPage"/>
                    <Button Content="Requests (F5)" Style="{StaticResource TransparentButtonStyle}" Click="RequestsPage"/>
                    <Button Content="Statistics (F6)" Style="{StaticResource TransparentButtonStyle}" Click="ShowStatisticsPage"/>
                    <Button Content="Super guide (F7)" Style="{StaticResource TransparentButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Frame Grid.Row="2" Name="ContentFrame" NavigationUIVisibility="Hidden" MinWidth="880" HorizontalAlignment="Right"/>

        </Grid>
    </Grid>
</Window>
