<Window x:Class="BookingApp.WPF.View.Guide.ShowTourInstances"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.WPF.View.Guide"
        mc:Ignorable="d"
        Title="ShowTourInstances" Height="450" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid>
            <ListView x:Name="InstancesListView" Margin="10" HorizontalAlignment="Center" Width="380" ItemsSource="{Binding TourInstances}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Date and Time" Width="150"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
