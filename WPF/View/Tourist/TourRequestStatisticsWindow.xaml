<Window x:Class="BookingApp.WPF.View.Tourist.TourRequestStatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:BookingApp.WPF.View.Tourist"
        mc:Ignorable="d"
        Title="TourRequestStatisticsWindow" Height="450" Width="450">
    <Grid>
        <Label Content="Izaberite godinu:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,12,0,0"/>

        <ComboBox x:Name="YearSelector" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,10,0,0" Width="120"
                  ItemsSource="{Binding Years}"
                  SelectedItem="{Binding SelectedYear}" />

        <lvc:PieChart HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,50,10,10"
                      LegendLocation="Right">
            <lvc:PieChart.Series>
                <lvc:PieSeries Title="Prihvaceni zahtevi" Values="{Binding PieChartData[0].Values}" DataLabels="True"/>
                <lvc:PieSeries Title="Odbijeni" Values="{Binding PieChartData[1].Values}" DataLabels="True"/>
            </lvc:PieChart.Series>
        </lvc:PieChart>
    </Grid>

</Window>
